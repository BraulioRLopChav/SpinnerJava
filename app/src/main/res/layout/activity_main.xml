<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9934AA"
        android:backgroundTint="#A638B8"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            app:srcCompat="@mipmap/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Spinner"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblPaisesDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/desApp"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblSelecciona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lblPaises"
            android:textColor="#FFF" />

        <Spinner
            android:id="@+id/spnPaises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF"
            android:minHeight="48dp">

        </Spinner>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>